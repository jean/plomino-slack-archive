      <beforeCreateDocument type="Products.Archetypes.Field.TextField"><![CDATA[#Plomino include libDefault

messages_json = req.get('messages_json')
if not messages_json:
    return

channel = req.get('channel')

if not same_type(messages_json, []):
    messages_json = [messages_json]

json = []
for j in messages_json:
    json = json + json_loads(j.read())

for message in json:
    doc = db.createDocument()
    doc.setItem("Form", 'frmMessage')
    doc.setItem("channel", channel)
    # Keep this as record
    doc.setItem('slack_props', message)
    # Compute id (etc) from Form
    doc.save(creation=True)

req.set('messages_json', None)
db.writeMessageOnPage('Imported %s messages' % len(json), req)]]></beforeCreateDocument>
